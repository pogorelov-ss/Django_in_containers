{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "dj-app",
      "host": {
        "sourcePath": "/var/app/current/dj_app"
      }
    },
    {
      "name": "dj-app-static",
      "host": {
        "sourcePath": "/var/app/current/dj_app/collect"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/nginx/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "django-app",
      "image": "sergeidc/django_in_containers:latest",
      "essential": true,
      "memory": 256,
      "mountPoints": [
        {
          "sourceVolume": "dj-app",
          "containerPath": "/dj_app",
          "readOnly": false
        }
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "django-app"
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        },
        {
          "sourceVolume": "dj-app-static",
          "containerPath": "/var/www/collect",
          "readOnly": true
        }
      ]
    }
  ]
}